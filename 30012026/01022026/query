WITH latest_reviews AS (
  SELECT 
    ri.root,
    ri.project,
    ri.group_1,
    ri.relation,
    ri.phase,
    ri.work_status,
    ri.submitted_at_utc,
    ri.modified_at_utc,
    -- Use our new virtual column here
    ri.leaf_group_name_virtual AS leaf_group_name,
    gcg.path AS group_leaf_path,
    gc.path AS group_category_path,
    SUBSTRING_INDEX(gc.path, '/', 1) AS top_group_node,
    
    -- Deduplication logic: Priority to empty phase, then most recent
    ROW_NUMBER() OVER (
      PARTITION BY ri.root, ri.project, ri.group_1, ri.relation
      ORDER BY 
        CASE WHEN ri.phase = '' THEN 0 ELSE 1 END,
        ri.modified_at_utc DESC
    ) AS rn
  FROM t_review_info ri
  -- The JOIN is now lightning fast because it's column-to-column
  LEFT JOIN t_group_category_group gcg
    ON gcg.project = ri.project
    AND gcg.deleted = 0
    AND gcg.path = ri.leaf_group_name_virtual 
  LEFT JOIN t_group_category gc
    ON gc.id = gcg.group_category_id
    AND gc.deleted = 0
    AND gc.root = 'assets'
  WHERE ri.project = 'hm'
    AND ri.root = 'assets'
    AND ri.deleted = 0
)
SELECT 
  root,
  project,
  group_1,
  relation,
  phase,
  work_status,
  submitted_at_utc,
  modified_at_utc,
  top_group_node
FROM latest_reviews
WHERE rn = 1
ORDER BY 
  CASE WHEN phase = '' THEN 0 ELSE 1 END,
  group_1 ASC
LIMIT 1000 OFFSET 0;
