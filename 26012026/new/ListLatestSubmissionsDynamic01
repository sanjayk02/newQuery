func (r *ReviewInfo) ListLatestSubmissionsDynamic(
	ctx context.Context,
	project, root string,
	_, _, _ string,
	limit, offset int,
	assetNameKey string,
	_, _ []string,
) ([]LatestSubmissionRow, error) {

	db := r.db.WithContext(ctx)

	query := `
		SELECT 
			gcg.path AS group_1,
			'relation' AS relation
		FROM t_group_category_group gcg
		JOIN t_group_category gc
			ON gc.id = gcg.group_category_id
			AND gc.deleted = 0
			AND gc.root = 'assets'
		WHERE gcg.project = ?
		  AND gcg.deleted = 0
		ORDER BY gcg.path ASC
		LIMIT ? OFFSET ?
	`

	var rows []LatestSubmissionRow
	if err := db.Raw(query, project, limit, offset).Scan(&rows).Error; err != nil {
		return nil, err
	}

	return rows, nil
}
