// In grouped view we want complete groups (ShotGrid-like), so fetch a big page.
const backendPage = (filtersActive || isGrouped) ? 0 : pageProps.page;
const backendRowsPerPage = (filtersActive || isGrouped) ? 5000 : pageProps.rowsPerPage;


