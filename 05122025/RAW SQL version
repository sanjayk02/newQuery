SELECT
    ri.id,
    ri.project,
    ri.root,
    ri.group_1,
    ri.relation,
    ri.take,
    ri.approval_status,
    ri.work_status,

    -- LEAF GROUP (t_group_category_group)
    gcg.id   AS group_category_group_id,
    gcg.path AS group_leaf_path,

    -- CATEGORY ROOT NODE (t_group_category)
    gc.id    AS group_category_id,
    gc.path  AS group_category_path,
    gc.depth AS group_category_depth,

    -- THIS IS WHAT YOU WANT FOR SHOTGRID GROUPING
    SUBSTRING_INDEX(gcg.path, '/', 1) AS top_group_node

FROM t_review_info ri

LEFT JOIN t_group_category_group AS gcg
    ON gcg.project = ri.project
   AND gcg.deleted = 0
   AND gcg.path = ri.groups      -- IMPORTANT: your screenshot shows "groups" exists in t_review_info

LEFT JOIN t_group_category AS gc
    ON gc.id = gcg.group_category_id
   AND gc.deleted = 0
   AND gc.root = 'assets'

WHERE ri.deleted = 0
  AND ri.project = 'potoodev'        -- your project
  -- AND ri.root = 'assets'           -- add if needed
;
