{topGroupNames.map((name) => {
  const isChecked = selectedTopGroups.includes(name);

  return (
    <MenuItem
      key={name}
      onClick={() => {
        setSelectedTopGroups((prev) =>
          prev.includes(name)
            ? prev.filter((n) => n !== name)
            : [...prev, name]
        );
      }}
    >
      {/* âœ… THIS IS WHERE IT GOES */}
      <Checkbox checked={isChecked} />

      <ListItemText primary={name} />
    </MenuItem>
  );
})}
