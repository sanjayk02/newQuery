{tableFooter && (
  <div 
    style={{
      position: 'sticky',
      bottom: 0,
      left: 0,
      right: 0,
      backgroundColor: COLORS.PAGE_BG,
      borderTop: `1px solid ${COLORS.GRID_LINE}`,
      zIndex: 100,
      padding: '8px 0',
      textAlign: 'right' as const, // Force text alignment
    }}
  >
    <div 
      style={{
        display: 'flex !important',
        justifyContent: 'flex-end !important',
        alignItems: 'center !important',
        width: '100% !important',
        padding: '0 16px !important',
      }}
    >
      {/* âœ… Clone the footer element and inject right-align styles */}
      {React.isValidElement(tableFooter) 
        ? React.cloneElement(tableFooter as React.ReactElement, {
            style: {
              ...((tableFooter as any).props?.style || {}),
              display: 'flex !important',
              justifyContent: 'flex-end !important',
              alignItems: 'center !important',
              width: '100% !important',
              marginLeft: 'auto !important',
            }
          })
        : tableFooter}
    </div>
  </div>
)}
